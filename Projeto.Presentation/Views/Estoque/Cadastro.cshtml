<!-- Definir a classe de modelo da página -->
@model Projeto.Presentation.Models.EstoqueCadastroViewModel

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Cadastro de Estoque</h4>
Por favor, preencha os campos abaixo:
<hr/>

<!-- Início do formulário -->
@using (Html.BeginForm("CadastrarEstoque", "Estoque", FormMethod.Post))
{
    @Html.LabelFor(model => model.Nome)
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4",
              @placeholder = "Digite aqui" })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </span>
    <br/>

    @Html.LabelFor(model => model.Descricao)
    @Html.TextAreaFor(model => model.Descricao,
        new { @class = "form-control col-md-4",
              @placeholder = "Digite aqui" })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Descricao)
    </span>
    <br />

    <input type="submit" value="Cadastrar Estoque"
           class="btn btn-success"/>
    <br/>
    <br/>

    <strong>@ViewData["Mensagem"]</strong>
}
<!-- Fim do formulário -->

